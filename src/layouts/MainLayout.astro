---
interface Props {
  title: string;
}

const { title } = Astro.props;

// Supports weights 100-900
import "@fontsource-variable/montserrat";
// Supports weights 100-900
import "@fontsource-variable/inter";
import "@fontsource/geist-sans";

import SideBar from "@/components/ui/SideBar.astro";
import { ViewTransitions } from "astro:transitions";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/yxsifdev-av.jpg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="flex">
    <SideBar />
    <main class="h-screen p-4 grow">
      <slot />
    </main>
  </body>
</html>
<style is:global>
  html {
    font-family:
      "Inter Variable",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    color-scheme: dark;
    background: #191919;
    /* 'Montserrat Variable', sans-serif; */
    /* 'Inter Variable', sans-serif */
    /* 'Geist Sans', sans-serif */
  }
</style>
